<div class="container">
  <div class="row">
    <div class="col-8">
      <% @posts.each do |post| %>
        <div class="post">
          <div class="post-meta">
            <%= link_to image_tag(post.account.avatar.thumb.url, class: 'avatar'), profile_path(post.account.username) %>
            <%= link_to post.account.username, profile_path(post.account.username), class: 'text-dark' %>
          </div>
          <%= image_tag post.image.url, class: 'img img-fluid' %>
          <div class="post-details">
            <p><strong><%= post.total_likes %> likes</strong></p>
            <p>
              <strong><%= link_to post.account.username, profile_path(post.account.username), class: 'text-dark' %></strong>
            </p>
            <%= simple_format post.description %>
            <p class="text-muted"><%= time_ago_in_words post.created_at %> ago</p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <div class="account-summary">
        <p>
          <%= link_to image_tag(current_account.avatar.thumb.url, class: 'avatar'), profile_path(current_account.username) %>
          <strong><%= current_account.username %></strong><br/>
        </p>
        <p><%= current_account.full_name %></p>

      </div>
      <div class="follower-suggestions">
        <%=  link_to 'View all', '#', class: "float-right text-dark" %>
        <p class="text-muted">Suggestions for you</p>
      </div>
    </div>
  </div>
</div>